<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.application.job.model.Job" table="T_Jobs">

		<id column="c_job_id" name="jobId" type="java.lang.Integer">
			<generator class="native" />
		</id>
		<property column="c_company_id" name="companyId" type="java.lang.Integer"/>
		<property column="c_company_name" name="companyName" type="java.lang.String" />
		<property column="c_skills" name="skillsArray" type="java.lang.String" />
		<property column="c_salary" name="salary" type="java.lang.Float" />

	</class>
</hibernate-mapping>